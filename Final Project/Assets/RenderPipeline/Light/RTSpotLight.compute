// Represent a spot light in HLSL Shader
// Corresponding to RTLightStructureSpot.cs

struct RTSpotLight
{
    float3 color;
    float3 position;
    float3 direction;
    float coneAngle;
    float cosConeAngle;
    float cosFullIlluminous;
    float penumbraDecay;
    float3 U;
    float3 W;
    float3 Pref;
    float PixelSize;
};