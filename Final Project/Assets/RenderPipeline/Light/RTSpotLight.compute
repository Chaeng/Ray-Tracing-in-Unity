// Represent a spot light in HLSL Shader
// Corresponding to RTLightStructureSpot.cs

struct RTSpotLight
{
    float3 color;
    float3 position;
    float3 direction;
    float coneAngle;
    float cosConeAngle;
    float cosFullIlluminous;
    float penumbraDecay;
    int enableShadowMap;
    int ShadowFilterRes;
    float range;
    float baseD;
    float fogDensity;
    int enablefog;
};
